{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schema.fulmenhq.dev/fulmen-toolbox/tool-manifest.schema.json",
  "title": "Fulmen Toolbox Tool Manifest",
  "type": "object",
  "required": ["tools"],
  "properties": {
    "$schema": { "type": "string" },
    "tools": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "version", "source", "images"],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "version": { "type": "string", "minLength": 1 },
          "source": {
            "type": "string",
            "enum": ["npm", "go", "apk", "binary", "other"]
          },
          "images": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 },
            "minItems": 1
          },
          "notes": { "type": "string" },
          "license_spdx": { "type": "string", "minLength": 1 },
          "license_source": {
            "type": "string",
            "enum": ["apk", "gomodcache", "npm", "upstream-url", "manual"]
          },
          "license_path": { "type": "string", "minLength": 1 },
          "license_paths": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 },
            "minItems": 1,
            "uniqueItems": true
          },
          "notice_required": { "type": "boolean" },
          "notice_path": { "type": "string", "minLength": 1 },
          "copyleft": { "type": "boolean" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
